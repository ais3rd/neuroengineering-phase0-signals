import matplotlib.pyplot as plt
import numpy as np

# Buat array 1000 titik dari 0 sampai 2
x = np.linspace(0,2,1000)
f = 1/2 #Frekuensi dibuat 1/2 Hz
y = np.sin(2 * np.pi * f * x)

plt.figure(figsize=(8,4))
plt.plot(x,y)
plt.title("Sine Wave (1/2 Hz)")
plt.xlabel("Time (s)")
plt.ylabel("Amplitude")
plt.grid(True)
plt.show()

import matplotlib.pyplot as plt
import numpy as np

# Buat 1000 titik dari 0 sampai 2
x = np.linspace(0,2,1000)
f = 1/2 #Frekuensi dibuat 1/2 Hz
y = np.sin(2 * np.pi * f * x)

plt.figure(figsize=(8,4))
plt.plot(x,y)
plt.title("Sine Wave (1/2 Hz)")
plt.xlabel("Time (s)")
plt.ylabel("Amplitude")
plt.grid(True)
plt.show()

# Buat noise
np.random.seed(0)  # reproducibility
noise = 0.3 * np.random.randn(len(x))
y_noisy = y + noise

plt.figure(figsize=(8,4))
plt.plot(x, y, label="Clean Signal")
plt.plot(x, y_noisy, label="Noisy Signal", alpha=0.7)
plt.title("Sine Wave (0.5 Hz) with Noise")
plt.xlabel("Time (s)")
plt.ylabel("Amplitude")
plt.legend()
plt.grid(True)
plt.show()
